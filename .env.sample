# airplanes.live API configuration
AIRPLANES_LIVE_KEY=
AIRPLANES_LIVE_URL=https://api.airplanes.live/v2
AIRPLANES_LIVE_LAT=38.0375
AIRPLANES_LIVE_LON=-78.4863
# Distance for the point endpoint (kilometres).
AIRPLANES_LIVE_RADIUS=25

# Optional photo lookup service
PHOTO_API_URL=https://fa-photo-api.web.app
PHOTO_API_USERNAME=username
PHOTO_API_PASSWORD=password

# PocketBase configuration
POCKETBASE_URL=http://pocketbase:8090
POCKETBASE_STATES_COLLECTION=states
POCKETBASE_IGNORED_COLLECTION=ignored
POCKETBASE_OPERATORS_COLLECTION=operators
# Use either the admin token or email/password for authentication
POCKETBASE_ADMIN_TOKEN=
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=super-secret-password
# Cache TTL (seconds) for operator lookups. Set to 0 to disable caching.
POCKETBASE_CACHE_TTL_SECONDS=300

# Apprise API configuration
APPRISE_URL=http://apprise:8000/notify
APPRISE_TARGETS=discord://webhook-token
APPRISE_TAG=
APPRISE_TIMEOUT=10000

# Optional uptime monitoring
HEALTHCHECK_URL=https://hc-ping.com/your-healthcheck-guid

# Runtime behaviour
REFRESH_SECONDS=5
COOLDOWN_MINUTES=10
MAXIMUM_ALT=25000
