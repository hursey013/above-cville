{
  "name": "above-cville",
  "version": "2.0.0",
  "description": "Self-hosted aircraft spotter that polls airplanes.live and posts Bluesky updates.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:coverage": "node --test --experimental-test-coverage",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier --log-level warn --check \"src/**/*.{js,mjs}\" \"test/**/*.js\"",
    "lint:prettier:fix": "prettier --log-level warn --write \"src/**/*.{js,mjs}\" \"test/**/*.js\"",
    "lint:eslint": "eslint src test --max-warnings=0",
    "lint:eslint:fix": "eslint src test --max-warnings=0 --fix",
    "lint:fix": "npm run lint:prettier:fix && npm run lint:eslint:fix"
  },
  "keywords": [
    "adsb",
    "airplanes",
    "bluesky",
    "self-hosted",
    "notifications"
  ],
  "author": "Brian Hurst",
  "license": "MIT",
  "dependencies": {
    "@atproto/api": "file:vendor/atproto-api",
    "dotenv": "^16.4.5",
    "lowdb": "^6.0.1",
    "node-cron": "^3.0.3",
    "pino": "^9.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.15.0",
    "prettier": "^3.6.2"
  }
}
